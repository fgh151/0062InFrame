mixin sFrameSlider(data)
	// start sFrameSlider
	+b.SECTION.sFrameSlider.section#sFrameSlider&attributes(attributes)
		.container
			+b.section-title
				h2 Раскадровка
			+e.slider--js.swiper
				.parallax-bg(style="background-image: url('img/svg/parallax.svg')" data-swiper-parallax="-10%").d-none.d-lg-block
				.parallax-bg(style="background-image: url('img/svg/parallax-mob.svg')" data-swiper-parallax="-20%").d-lg-none

				.swiper-wrapper
					.swiper-slide(data-swiper-parallax="-300"): +frameSlide('Кадр 1','148 дней','13 февраля — 11 июля','Прием заявок','Участники вносят данные о проекте в личном кабинете на сайте Премии')
						//- +e.text Узнайте об этапах и правилах подачи заявок в #[a(href="#") чек-листе участника]
						+e.btn.btn.btn-light(href='#') Подать заявку
					.swiper-slide(data-swiper-parallax="-300"): +frameSlide('Кадр 2','20 дней','14 июля — 3 августа','Техническая экспертиза','Мы обрабатываем заявки и определяем 240 номинантов')
					.swiper-slide(data-swiper-parallax="-300"): +frameSlide('Кадр 3','27 дней','4 августа — 7 сентября','Экспертная комиссия','Эксперты выбирают 60 финалистов — информацию о командах и их проектах мы публикуем на сайте Премии. Финалистов приглашаем на церемонию награждения')
					.swiper-slide(data-swiper-parallax="-300"): +frameSlide('Кадр 4','13 дней','8 сентября — 21 сентября','Голосование жюри','Жюри определяет 36 лауреатов — из них 12 победителей')
					.swiper-slide(data-swiper-parallax="-300"): +frameSlide('Кадр 5','Очно в Москве','2 октября','Премьера','Приветствуем финалистов, награждаем лауреатов и победителей на торжественной церемонии в «Москве-Сити», башня «Федерация»').--primary
						+img(src="img/svg/stars.svg", alt="").stars.stars_rotate
	// end sFrameSlider

mixin frameSlide(s1, s2, date, t, p)
	+b.frame-slider&attributes(attributes)
		+e.top
			+e.nav
				.text-large= s1
				.text-large= s2
			+e.date= date
		+e.bottom
			+e.title.h3= t
			if p
				+e.text= p
			block