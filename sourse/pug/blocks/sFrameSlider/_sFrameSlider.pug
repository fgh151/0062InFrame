mixin sFrameSlider(data)
	// start sFrameSlider
	+b.SECTION.sFrameSlider.section#sFrameSlider&attributes(attributes)
		.container
			+b.section-title
				.row.aling-items-center
					.col
						h2 Раскадровка
					.col-auto
						.control-wrap
							+arrow2
			+e.slider--js.swiper 
				.swiper-wrapper
					.swiper-slide(): +frameSlide('Кадр 1','13 февраля — 11 июля','Прием заявок','Участники вносят данные о проекте в личном кабинете на сайте Премии') 
						+e.btn.btn.btn-light(href='#') Подать заявку
					.swiper-slide(): +frameSlide('Кадр 2','14 июля — 3 августа','Техническая экспертиза','Мы обрабатываем заявки в соответствии с критериями Премии и определяем номинантов')
					.swiper-slide(): +frameSlide('Кадр 3','4 августа — 7 сентября','Экспертная комиссия','Эксперты выбирают 60 финалистов — информацию о командах и их проектах мы публикуем на сайте Премии. Финалистов приглашаем на церемонию награждения')
					.swiper-slide(): +frameSlide('Кадр 4','8 сентября — 21 сентября','Голосование жюри','Жюри определяет 36 лауреатов — из них 12 победителей')
					.swiper-slide(): +frameSlide('Кадр 5','2 октября','Премьера','Приветствуем финалистов, награждаем лауреатов и победителей на торжественной церемонии очно в Москве').--primary
						+img(src="img/stars-3.png", alt="").stars.stars_rotate
	// end sFrameSlider

mixin frameSlide(s1, date, t, p)
	+b.frame-slider&attributes(attributes)
		+e.top
			+e.nav
				.text-large= s1
				//- .text-large= s2
			+e.date= date
		+e.bottom
			+e.title.h3= t
			if p
				+e.text= p
			block