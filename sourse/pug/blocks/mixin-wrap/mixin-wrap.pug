include ../../_assets/bemto/bemto
- set_bemto_settings({ modifier: "--" })
include components/menu.pug
include components/icon.pug
include components/breadcrumb.pug
include components/pugination.pug
include components/soc.pug
include components/pic.pug
include components/img.pug
include components/btn.pug

include components/ddgroup.pug

mixin arrow()
	.swiper-button-hand.swiper-button-hand-prev.swiper-button-prev
		+icon('chevron-left')
	.swiper-button-hand.swiper-button-hand-next.swiper-button-next
		+icon('chevron-right')
//- /arrow for swiper-slider


mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" value="1"  inputmode='numeric')
		+e.btn--plus(type="button")

mixin search()
	+b.search-block
		form
			input(type="text" placeholder="Поиск по номеру или названию запчасти" inputmode='search')
			button 
				+icon("search")

mixin page-head(t,...items)
	+b.page-head
		- let l = items.length
		.container
			+breadcrumb('Главная',...items)

			h1= t

mixin parts(elem)
	script.
		addBlock(`#{elem}`)
	div(id=`${elem}Wrap`)

  
mixin gradientBtn(text)
	+e.btn.btn.btn-gradient(href='#')&attributes(attributes)
		span=text
			if block
				block

mixin juryCard(name, text, i)
	+b.jury-card&attributes(attributes)
		+e.img-wrap.text-center: +img(`img/jury-c-${i}.png`).gray-filter
		+e.content
			+e.name!= name
			+e.text!= text


mixin expertCard(name, text, i)
	+b.person-card&attributes(attributes)
		+e.img-wrap.text-center
			if i
				+img(`img/expert-${i}.png`).gray-filter
		+e.content
			+e.name!= name
			+e.text!= text


mixin blogCard(img, title, text, date)
	+b.A.blog-card(href='#')&attributes(attributes)
		+e.content
			if img
				+e.img-wrap
					+img(`img/${img}.png`, 'bg')
			+e.title.fw-500!= title
			+e.text!= text
		+e.footer
			+e.date.fw-500!= date


mixin uploadFile
	.file-container.file-container--js&attributes(attributes)
		.upload
			label.file-label.btn.btn-secondary Прикрепить
				+icon('plus')
			input.file-upload(type='file' multiple)
		.files

mixin uploadFileSingle
	.file-container.file-container--js&attributes(attributes)
		.upload
			label.file-label.btn.btn-secondary Прикрепить
				+icon('plus')
			input.file-upload(type='file')
		.files

mixin stepsLine 
	+b.steps-line.swiper.breadcrumb-slider--js&attributes(attributes)
		.swiper-wrapper
			.swiper-slide: a(href="#") Шаг 1
			.swiper-slide: a(href="#") Шаг 2
			.swiper-slide: a(href="#") Шаг 3
			.swiper-slide: a(href="#") Шаг 4
			.swiper-slide: a(href="#") Финал


mixin infoSmall(text)
	+b.info-window--js.info-window_small&attributes(attributes)
		+e.content.d-flex
			+img(src="img/svg/success.svg", alt="").img-icon
			.small.text-secondary=text
			//- .close-btn: +icon('x')

mixin consultation
	+b.info-window--js.consult-info.hidden
		p Готовы проконсультировать вас и помочь заполнить заявку.
		p Нажмите кнопку, и мы свяжемся с вами в ближайшее время.
		+e.btn.btn.btn-outline-primary.consult--js.BUTTON Получить консультацию
		+img(src="img/svg/question-i.svg", alt="").info-bg
		.close-btn: +icon('x')
	+b.info-window--js.thanks-window.hidden
		+e.content.d-flex
			+img(src="img/svg/success.svg", alt="")
			+e.wrap
				.small Спасибо, мы скоро свяжемся с вами по контактным данным, которые вы указали при регистрации личного кабинета
				.small Пожалуйста, обратите внимание, что наша служба поддержки работает в будние дни с 8:00 до 19:00 Мск.
			.close-btn: +icon('x')