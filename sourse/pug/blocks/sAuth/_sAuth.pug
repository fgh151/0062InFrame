mixin legendItem(p)
	+b.legend-item 
		block 
		+e.text.small.text-secondary.order-last= p

mixin applyCard(p, t, btn, grad)
	+e.col.col-md-6.col-xl-4
		+b.apply-card
			+e.wrap
				+e.top.row-between
					block
				+e.content
					.small=p
					+e.title.h5=t
			+e.bottom.row-between
				+e.date.text-secondary.small.tinny-item-js 11.10.2024
					.tinny-template.d-none Дата создания заявки
				if grad 
					+e.btn.btn.btn-sm.small(href='#' download)&attributes(attributes)
						span=btn
				else if btn 
					+e.btn.btn.btn-sm.small(href='#' download)&attributes(attributes)=btn

mixin sAuth2(data)
	// start sAuth
	+b.SECTION.sAuth.section#sAuth&attributes(attributes)
		.container
			+e.row.row
				+e.col.col-lg-6
					+b.section-title
						h3 Подать заявку
					+e.text
						.h5 Заявите свой проект на Премию Правительства Москвы в сфере управления персоналом «В кадре».
						p Подача заявки проходит в несколько этапов — вы можете заполнять данные постепенно или #[span отредактировать заявку до 11 июля.]
					+e.btn.btn.btn-primary(href='#') Начать
