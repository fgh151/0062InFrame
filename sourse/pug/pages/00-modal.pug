extends ../layout/main.pug

include ../blocks/headerBlock/_headerBlock.pug
include ../blocks/sForm/_sForm.pug
include ../blocks/sContent/_sContent.pug
 
include ../blocks/sContact/_sContact.pug
include ../blocks/sForm/_sForm.pug
include ../blocks/sForm/_sForm.pug
include ../blocks/sCatalog/_sCatalog.pug

block variables
	- let  mainPage= 'main-page' 
	- let  bg= null

block title
	- let  title= 'Modals page '
	title= title
block pagecontent
	//- +mob-mnu()
	
	
	+parts('header')
	main.modal
		+modalMob() 
		.section.container 
		//- +page-head(title,title, title, title , title,title, title, title, title,title, title, title)
		.section.container
			h2 Main page
			mixin btn(a, t)
				a( href= a).btn.btn-primary.link-modal-js= t
			+btn("#modal-question", 'Задать вопрос')
			+btn("#modal-auth", 'Личный кабинет')
			+btn("#modal-auth-success", 'Успешная Регистрация')
			+btn("#modal-mail-confirmed", 'Почта подтверждена!')
			+btn("#modal-partner", 'Стать партнером')
			h3 Сброс пароля
			+btn("#modal-reset-1", 'Сброс пароля 1')
			+btn("#modal-reset-2", 'Сброс пароля 2')
			+btn("#modal-reset-info", 'Войти')
			+btn("#modal-reset-success", 'Пароль успешно изменен')
		.section: .container
			h2 Cabinet
			+btn("#modal-frames", 'Раскадровка')
			+btn("#modal-exit", 'Выйти')
			+btn("#modal-cancel", 'Отменить заполнение заявки')
			+btn("#modal-cancel-1", 'Отменить 1')
			+btn("#modal-cancel-2", 'Отменить 2')
			+btn("#modal-criteria-1", 'Критерии 1')
			+btn("#modal-criteria-2", 'Критерии 2')
			+btn("#modal-info", 'Инфо')
			h3 Модальное если зашел в моб
			+btn("#modal-mob", 'Окно')
		//- +sCatalog
	+parts('footer')
      



